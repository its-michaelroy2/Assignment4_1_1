<Window x:Class="Assignment4_1_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment4_1_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ContactData" Grid.Row="0" Margin="5"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <TextBox x:Name="txtSearch" Width="200" Margin="5"/>
            <Button x:Name="btnSearch" Content="Search" Click="btnSearch_Click" Margin="5"/>
        </StackPanel>
        <DataGrid x:Name="dataGridResult" Grid.Row="2" Margin="5"/>
    </Grid>
</Window>
